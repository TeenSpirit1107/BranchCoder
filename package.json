{
  "name": "ai-chat-sidebar",
  "displayName": "AI Chat Sidebar",
  "description": "AI对话侧边栏扩展",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiChat",
          "title": "AI Chat",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "aiChat": [
        {
          "id": "aiChat.chatView",
          "name": "Chat",
          "type": "webview",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "aiChat.openChat",
        "title": "Open AI Chat",
        "category": "AI Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "aiChat.sendMessage",
        "title": "Send Message",
        "icon": "$(send)"
      },
      {
        "command": "aiChat.clearChat",
        "title": "Clear Chat",
        "icon": "$(clear-all)"
      },
      {
        "command": "aiChat.showPatchPreview",
        "title": "Show Patch Preview",
        "category": "AI Chat"
      },
      {
        "command": "aiChat.applyPatch",
        "title": "Apply Patch",
        "category": "AI Chat",
        "icon": "$(check)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "aiChat.clearChat",
          "when": "view == aiChat.chatView",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "AI Chat",
      "properties": {
        "aiChat.pythonPath": {
          "type": "string",
          "default": ".venv/bin/python",
          "description": "Path to Python interpreter. For uv environments, use '.venv/bin/python' (Linux/macOS) or '.venv\\Scripts\\python.exe' (Windows). Relative paths are resolved from workspace root."
        },
        "aiChat.aiScriptPath": {
          "type": "string",
          "default": "python/ai_service.py",
          "description": "Path to AI service Python script"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "marked": "^11.1.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^16.18.0",
    "typescript": "^4.9.4"
  }
}

